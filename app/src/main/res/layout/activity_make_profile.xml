<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MakeProfileActivity">

    <RelativeLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/headingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:text="Make Fake Profile"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tagText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/headingtext"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:lineHeight="25dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/comfortaa_regular"
            android:gravity="center"
            android:text="Duplicate Anyone WhatsApp Profile inn One Tap!"
            android:textColor="@color/white" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/heading"
        android:layout_above="@id/adView"
        android:layout_margin="12dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="8sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageCard"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="12sp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_toEndOf="@id/backbtn"
                        app:cardCornerRadius="50dp">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/whatsapp" />

                    </androidx.cardview.widget.CardView>
                    <Button
                        android:id="@+id/selectImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Profile"
                        android:fontFamily="@font/comfortaa_regular"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa_regular" />

                <EditText
                    android:id="@+id/personName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rounded"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:hint="Enter Name"
                    android:textColor="@color/primary"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Seen :"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa_regular" />

                <EditText
                    android:id="@+id/lastSeen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rounded"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:hint="last seen today at 11:35 pm"
                    android:textColor="@color/primary"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status :"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa_regular" />

                <EditText
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rounded"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:hint="Hey There! I'm using WhatsTool"
                    android:textColor="@color/primary"
                    android:inputType="textPersonName" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status Date :"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa_regular" />

                <EditText
                    android:id="@+id/statusDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rounded"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:hint="14 Feb 2022"
                    android:textColor="@color/primary"
                    android:inputType="textPersonName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Num :"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/comfortaa_regular" />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_rounded"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:hint="923123456789"
                    android:textColor="@color/primary"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/doneBtn"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="25dp"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_banner_id"></com.google.android.gms.ads.AdView>


</RelativeLayout>